{
  "name": "GoodJob Notifier",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Coplaの新着GoodJobを通知｡",
  "options_page": "options.html",
  "update_url": "https://github.com/hotchemi/goodjob_notifier/raw/master/pkg/goodjob_notifier.xml",
  "web_accessible_resources": [
    "img/gj.png",
    "img/gjm.png"
  ],
  "icons": {
    "16": "img/gj.png",
    "48": "img/gj.png",
    "128": "img/gj.png"
  },
  "browser_action": {
    "default_title": "GoodJob Notifier",
    "default_icon": "img/gj.png"
  },
  "background" : {
    "persistent": false,
    "scripts": ["js/core.js", "js/jquery.js"]
  },
  "permissions": [
    "tabs",
    "alarms",
    "notifications",
    "https://*/*"
  ]
}
